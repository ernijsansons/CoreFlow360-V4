# ============================================================================
# Design System Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# Node Environment
# ============================================================================
NODE_ENV=development
PORT=3000

# ============================================================================
# Cloudflare Configuration
# ============================================================================
# Get these from your Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# For Cloudflare Pages
CLOUDFLARE_PROJECT_NAME=design-system

# ============================================================================
# Figma Integration
# ============================================================================
# Create a personal access token at https://www.figma.com/developers/api#access-tokens
FIGMA_TOKEN=your_figma_token_here
FIGMA_FILE_ID=your_figma_file_id_here
FIGMA_TEAM_ID=your_figma_team_id_here

# ============================================================================
# GitHub Configuration
# ============================================================================
# For GitHub Container Registry
GITHUB_TOKEN=your_github_token_here
GITHUB_ACTOR=your_github_username

# ============================================================================
# NPM Publishing
# ============================================================================
# Create at https://www.npmjs.com/settings/your-username/tokens
NPM_TOKEN=your_npm_token_here

# ============================================================================
# Chromatic (Storybook Visual Testing)
# ============================================================================
# Get from https://www.chromatic.com
CHROMATIC_PROJECT_TOKEN=your_chromatic_token_here

# ============================================================================
# Percy (Visual Regression Testing)
# ============================================================================
# Get from https://percy.io
PERCY_TOKEN=your_percy_token_here

# ============================================================================
# Vercel Deployment (Optional)
# ============================================================================
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# ============================================================================
# Security Keys
# ============================================================================
# Generate secure random strings for these
API_KEY=generate_secure_32_char_string_here
JWT_SECRET=generate_secure_32_char_string_minimum_here
ENCRYPTION_KEY=generate_secure_32_char_string_here

# ============================================================================
# Analytics
# ============================================================================
# Google Analytics or similar
ANALYTICS_ID=your_analytics_id_here

# ============================================================================
# Grafana Monitoring (Optional)
# ============================================================================
GRAFANA_PASSWORD=secure_password_here

# ============================================================================
# Docker Registry (Optional)
# ============================================================================
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_PORT=3845
MCP_LOG_LEVEL=info

# ============================================================================
# Development URLs
# ============================================================================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# ============================================================================
# Production URLs
# ============================================================================
PRODUCTION_URL=https://design-system.coreflow360.com
STORYBOOK_URL=https://design-system-storybook.coreflow360.com
WORKERS_URL=https://design-system.coreflow360.workers.dev