{
  "name": "@future-enterprise/design-system",
  "version": "1.0.0",
  "description": "The Future of Enterprise - Revolutionary Design System",
  "author": "Future Enterprise Team",
  "license": "MIT",
  "homepage": "https://github.com/future-enterprise/design-system",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/future-enterprise/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/future-enterprise/design-system/issues"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "enterprise",
    "components",
    "ui",
    "tailwind"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc",
    "build:lib": "tsup",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,html,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,html,yml,yaml}\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.test\\.",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=\\.a11y\\.",
    "test:visual": "percy snapshot",
    "test:storybook": "test-storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "bundle:analyze": "vite-bundle-visualizer",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "release": "semantic-release",
    "figma:sync": "node scripts/sync-figma-tokens.js",
    "mcp:start": "node mcp-templates/server.js",
    "playground": "vite dev --config vite.playground.config.ts"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.6.0",
    "@storybook/addon-designs": "^7.0.0",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-measure": "^7.6.0",
    "@storybook/addon-outline": "^7.6.0",
    "@storybook/addon-viewport": "^7.6.0",
    "@storybook/blocks": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-vite": "^7.6.0",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.6.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "chromatic": "^10.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "percy": "^1.27.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "semantic-release": "^22.0.12",
    "storybook": "^7.6.0",
    "storybook-dark-mode": "^3.0.3",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-bundle-visualizer": "^0.11.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "components/**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageThresholds": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "tsup": {
    "entry": [
      "index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "treeshake": true,
    "minify": true,
    "external": [
      "react",
      "react-dom"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}