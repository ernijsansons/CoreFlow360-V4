# CoreFlow360 V4 - Docker Environment Configuration
# Copy this file to .env and update the values for Docker deployment

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=coreflow
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=coreflow360
DATABASE_URL=postgresql://coreflow:your_secure_password_here@postgres:5432/coreflow360

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# Security Configuration
# ============================================================================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters

# ============================================================================
# External Services
# ============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# ============================================================================
# Monitoring & Observability
# ============================================================================
GRAFANA_PASSWORD=your_grafana_password_here
PROMETHEUS_RETENTION=200h

# ============================================================================
# Docker Configuration
# ============================================================================
COMPOSE_PROJECT_NAME=coreflow360
DOCKER_BUILDKIT=1
